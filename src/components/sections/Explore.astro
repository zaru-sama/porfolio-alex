---
import SectionHeader from "@/components/elements/SectionHeader.astro";
import ThemeImage from "@/components/ui/ThemeImage.astro";
interface Props {
  title?: string;
  description?: string;
}
const { title, description } = Astro.props;
---

<section class="pb-8 sm:pb-12 site-container">
  <div class="space-y-6 sm:space-y-8 md:space-y-8">
    <SectionHeader title={title} description={description} />
  </div>

  <div class="explore-content w-full relative mt-6 sm:mt-8">
    <div
      class="explore-list w-full relative grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4"
    >
      <div
        class="explore-column explore-column-2 w-full flex gap-3 sm:gap-4 flex-col sm:flex-row lg:flex-col sm:items-stretch col-span-1 sm:col-span-2 lg:col-span-1"
      >
        <div
          class="explore-item cursor-crosshair bg-bg-secondary/75 dark:bg-bg-secondary-dark relative overflow-hidden rounded-xl border border-primary/15 dark:border-neutral-700/50 explore-item-1 h-[180px] sm:h-[220px] lg:min-h-[264px] sm:flex-1 lg:flex-none"
          data-aos="fade-up-sm"
          data-aos-delay="500"
          data-aos-duration="600"
          data-aos-once="true"
        >
          <div class="content">
            <h3>Code</h3>
            <p>Turning ideas into real products with clean front-end code.</p>
          </div>
          <div
            class="absolute icon right-[-35%] sm:right-[-50%] md:right-[-58%] bottom-0 top-0 flex items-center self-center w-[300px] sm:w-[320px] md:w-[390px] h-auto"
          >
            <ThemeImage
              light="/assets/icons/code.png"
              dark="/assets/icons/code-dark.png"
              alt="icon"
              class="max-w-56 cursor-crosshair"
            />
          </div>
        </div>
        <div
          class="explore-item cursor-crosshair bg-bg-secondary/75 dark:bg-bg-secondary-dark relative overflow-hidden rounded-xl border border-primary/15 dark:border-neutral-700/50 explore-item-2 h-[180px] sm:h-[220px] sm:flex-1 lg:flex-none"
          data-aos="fade-up-sm"
          data-aos-delay="600"
          data-aos-duration="600"
          data-aos-once="true"
        >
          <div class="content">
            <h3>UI/UX</h3>
            <p>
              User-friendly interfaces that feel intuitive, calm, and visually
              consistent.
            </p>
          </div>
          <div
            class="absolute icon -mt-2 right-[-35%] sm:right-[-50%] md:right-[-58%] bottom-0 top-0 flex items-center self-center w-[300px] sm:w-[320px] md:w-[390px] h-auto"
          >
            <ThemeImage
              light="/assets/icons/ui_ux.png"
              dark="/assets/icons/ui_ux-dark.png"
              alt="UI/UX"
              class="max-w-60 cursor-crosshair"
            />
          </div>
        </div>
      </div>

      <div
        class="explore-column explore-column-2 w-full flex gap-3 sm:gap-4 flex-col sm:flex-row lg:flex-col sm:items-stretch col-span-1 sm:col-span-2 lg:col-span-1"
      >
        <div
          class="explore-item cursor-crosshair bg-bg-secondary/75 dark:bg-bg-secondary-dark relative overflow-hidden rounded-xl border border-primary/15 dark:border-neutral-700/50 explore-item-3 h-[180px] sm:h-[220px] sm:flex-1 lg:flex-none"
          data-aos="fade-up-sm"
          data-aos-delay="700"
          data-aos-duration="600"
          data-aos-once="true"
        >
          <div class="content">
            <h3>Tools</h3>
            <p>
              From JS to Adobe CC, I use tools and workflows that keep me fast
              and consistent.
            </p>
            <div class="mt-2 btn opacity-0 transition duration-300 ease-in-out">
            </div>
          </div>
          <div
            class="absolute icon -mt-2 right-[-35%] sm:right-[-50%] md:right-[-58%] bottom-0 top-0 flex items-center self-center w-[300px] sm:w-[320px] md:w-[390px] h-auto"
          >
            <ThemeImage
              light="/assets/icons/tools.png"
              dark="/assets/icons/tools-dark.png"
              alt="icon"
              class="max-w-56 cursor-crosshair"
            />
          </div>
        </div>
        <div
          class="explore-item cursor-crosshair bg-bg-secondary/75 dark:bg-bg-secondary-dark explore-item-3 relative overflow-hidden rounded-xl border border-primary/15 dark:border-neutral-700/50 explore-item-4 h-[180px] sm:h-[220px] lg:h-[264px] sm:flex-1 lg:flex-none"
          data-aos="fade-up-sm"
          data-aos-delay="800"
          data-aos-duration="600"
          data-aos-once="true"
        >
          <div class="content">
            <h3>Collaboration</h3>
            <p>
              I enjoy working with people, sharing ideas, and making things
              better together.
            </p>
          </div>
          <div
            class="absolute icon right-[-35%] sm:right-[-50%] md:right-[-58%] bottom-0 top-0 flex items-center self-center w-[300px] sm:w-[320px] md:w-[390px] h-auto"
          >
            <ThemeImage
              light="/assets/icons/colaboration.png"
              dark="/assets/icons/colaboration-dark.png"
              alt="icon"
              class="max-w-56 cursor-crosshair"
            />
          </div>
        </div>
      </div>

      <div
        class="explore-column explore-column-3 w-full flex gap-3 sm:gap-4 flex-col sm:flex-row lg:flex-col sm:items-stretch col-span-1 sm:col-span-2 lg:col-span-1"
      >
        <div
          class="explore-item cursor-crosshair bg-bg-secondary/75 dark:bg-bg-secondary-dark relative overflow-hidden rounded-xl border border-primary/15 dark:border-neutral-700/50 explore-item-1 h-[180px] sm:h-[220px] lg:min-h-[264px] sm:flex-1 lg:flex-none"
          data-aos="fade-up-sm"
          data-aos-delay="500"
          data-aos-duration="600"
          data-aos-once="true"
        >
          <div class="content">
            <h3>Art</h3>
            <p>
              Sketches and paintings that fuel my creativity and eye for detail.
            </p>
          </div>
          <div
            class="absolute icon right-[-35%] sm:right-[-50%] md:right-[-58%] bottom-0 top-0 flex items-center self-center w-[300px] sm:w-[320px] md:w-[390px] h-auto"
          >
            <ThemeImage
              light="/assets/icons/art.png"
              dark="/assets/icons/art-dark.png"
              alt="icon"
              class="max-w-56 cursor-crosshair"
            />
          </div>
        </div>
        <div
          class="explore-item cursor-crosshair bg-bg-secondary/75 dark:bg-bg-secondary-dark relative overflow-hidden rounded-xl border border-primary/15 dark:border-neutral-700/50 explore-item-2 h-[180px] sm:h-[220px] sm:flex-1 lg:flex-none"
          data-aos="fade-up-sm"
          data-aos-delay="600"
          data-aos-duration="600"
          data-aos-once="true"
        >
          <div class="content">
            <h3>Open Source</h3>
            <p>
              I support open-source principles like transparency, freedom, and
              community.
            </p>
          </div>
          <div
            class="absolute icon -mt-6 right-[-35%] sm:right-[-50%] md:right-[-58%] bottom-0 top-0 flex items-center self-center w-[300px] sm:w-[320px] md:w-[390px] h-auto"
          >
            <ThemeImage
              light="/assets/icons/open_source.png"
              dark="/assets/icons/open_source-dark.png"
              alt="UI/UX"
              class="max-w-60 cursor-crosshair"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .content {
    position: absolute;
    bottom: 0;
    left: 0;
    top: 0;
    max-width: 45%;
    padding-left: 1rem;
    padding-right: 0.5rem;
    display: flex;
    align-items: self-start;
    flex-direction: column;
    justify-content: center;
    transition: all 0.3s ease-in-out;
    z-index: 1;
  }

  @media (min-width: 640px) {
    .content {
      max-width: 55%;
      padding-left: 1.25rem;
    }
  }

  @media (min-width: 768px) {
    .content {
      max-width: 50%;
      padding-left: 1.5rem;
    }
  }

  .content h3 {
    font-size: 1.25rem;
    line-height: 1.1;
    margin-bottom: 0.5rem;
    font-family: var(--font-brand);
  }

  @media (min-width: 640px) {
    .content h3 {
      font-size: 1.5rem;
    }
  }

  @media (min-width: 768px) {
    .content h3 {
      font-size: 1.75rem;
    }
  }

  .content p {
    font-size: 0.75rem;
    line-height: 1.3;
    font-weight: 400;
    color: var(--color-neutral-400);
    margin-bottom: 0;
  }
  .html .dark .content p {
    color: var(--color-neutral-300);
  }
  @media (min-width: 640px) {
    .content p {
      font-size: 0.8125rem;
    }
  }

  @media (min-width: 768px) {
    .content p {
      font-size: 0.875rem;
    }
  }

  .explore-item {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    display: flex;
    justify-content: start;
    align-items: center;
  }
  .explore-item:hover .btn {
    opacity: 1;
  }

  @media (min-width: 768px) {
    .explore-item-1:hover .icon,
    .explore-item-2:hover .icon,
    .explore-item-3:hover .icon,
    .explore-item-4:hover .icon {
      right: -48%;
    }
  }

  @media (max-width: 767px) {
    .explore-item-1:hover .icon,
    .explore-item-2:hover .icon,
    .explore-item-3:hover .icon,
    .explore-item-4:hover .icon {
      right: -28%;
      transform: scale(0.95);
    }
  }
  @media (max-width: 767px) {
    .icon {
      transform: scale(0.9);
    }
  }

  .icon {
    cursor: pointer;
    transition: all 0.5s ease-in-out;
    z-index: 10;
  }

  .explore-figure {
    z-index: 50;
  }

  .explore-item-2 {
    overflow: hidden;
  }

  .explore-column-1 {
    overflow: visible;
  }

  .explore-list {
    overflow: visible;
  }

  .explore-content {
    overflow: visible;
  }
</style>
